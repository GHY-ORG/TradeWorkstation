@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "拼车展示-柳交所";
    ViewBag.Css = new string[]{
        "~/bundles/show_styles"
    };
}
<div class="container clearfix" id="button-area">
    <a href="~/Car/Search/Page/1" class="btn btn-success">拼出行</a><a href="~/Other/Search/Page/1" class="btn btn-primary">拼其他</a>
    <a class="btn btn-warning float-r" href="~/Home/Publish"><span class="glyphicon glyphicon-plus"></span> 我 要 发 布</a>
</div>
<div class="container" id="jiansuo">
    <form action="~/Car/Search" method="post" role="form" class="form-horizontal">
        <div class="row">
            <h5>| 出行检索</h5>
            <div class="row">
                <div class="col-md-4">
                    <label class="col-md-4 control-label">出发时间:</label>
                    <div class="col-md-8 input-group date form_datetime" data-date="1979-09-16T05:25:07Z" data-date-format="yyyy-mm-dd HH:ii p" data-link-field="dtp_input1" style="padding:0 10px">
                        <input class="form-control input-sm" name="runtime" type="text" required>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="col-md-3 col-md-offset-1 control-label">出发地:</label>
                    <div class="col-md-8">
                        <input class="form-control input-sm input-group" name="from" type="text" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="col-md-3 col-md-offset-1 control-label">目的地:</label>
                    <div class="col-md-8">
                        <input class="form-control input-sm input-group" name="to" type="text" required>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn">检索你的出行</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="container" id="show-area">
    <div class="row">
        <div class="col-md-12" id="location">
            <span class="linkitem">您的位置 >></span><a class="linkitem all-sort-linkitem2" href="~/Car/Search/Page/1">拼出行</a>
        </div>
        <div class="col-md-12">
            @foreach (var m in @ViewData.Model)
            {
                <div class="col-md-12 listall">
                    <div class="col-md-2 list-left text-center hidden-sm hidden-xs">
                        <img src="~/image/head-userhead-qiugou.png" />
                        <p>@m.NickName</p>
                    </div>
                    <div class="col-md-10 list-right clearfix">
                        <div class="col-sm-10 list-right-left">
                            <p class="grey">出发日期：<span class="green">@m.RunTime </span>从<span class="green"> @m.From </span>到<span class="green"> @m.To </span></p>
                            <p>@m.Detail</p>
                            <p class="datatime">@m.NickName 于 @m.PostTime 发布 | <button type="button" class="btn btn-success btn-xs">收藏</button> <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target=".bs-example-modal-sm">举报</button></p>
                        </div>
                        <div class="col-sm-2 hidden-xs padding-0-10 text-center">
                            <p>联系发布人</p>
                            <p>QQ：@m.QQ</p>
                            <p>Tel：@m.Tel</p>
                        </div>
                        <div class="visible-xs-block padding-0-20">
                            <p>联系发布人： QQ：@m.QQ  Tel：@m.Tel</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Small modal -->
        <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="exampleModalLabel">举报理由</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <textarea class="form-control" id="message-text"></textarea>
                            </div>
                            <div style="text-align:right">
                                <button type="button" class="btn btn-primary text-right">确定</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="#" onclick="gotoTop();return false;" class="totop"></a>