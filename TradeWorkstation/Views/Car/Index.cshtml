@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "拼车表单-柳交所";
    ViewBag.Css = new string[]{
        "~/CSS/form.css"
    };
}

<div class="container" id="location">
    <span>您的位置 >>  </span><a href="#">发布</a>
</div>

<div class="container" id="title-top"><h5>发布拼出行信息</h5></div>
<div class="container">
    <div class="row">
        <form class="form-horizontal" action="/TradeWorkstation/Car/Handler" method="post" role="form" enctype="multipart/form-data">
            <div class="col-md-8 col-md-offset-2" id="fb-top">
                <div class="form-group row">
                    <label class="col-md-2 control-label label-list">标题</label>
                    <div class="col-md-9">
                        <input name="title" type="text" class="form-control" value="" placeholder="请输入标题" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 control-label label-list">出发时间</label>
                    <div class="input-group date form_datetime col-md-9" data-date="1979-09-16T05:25:07Z" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                        <input class="form-control" size="16" type="text" value="" readonly="">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 control-label label-list">出发地</label>
                    <div class="col-md-4">
                        <input name="carFrom" type="text" class="form-control" value="" placeholder="请输入出发地~" required>
                    </div>
                    <label class="col-md-2 control-label label-list">目的地</label>
                    <div class="col-md-3">
                        <input name="carTo" type="text" class="form-control" value="" placeholder="请输入目的地~" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 control-label label-list">详细说明</label>
                    <div class="col-md-9">
                        <textarea name="detail" class="form-control" rows="6" placeholder="请输入详细说明" required></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4" id="form-bottom">
                <div class="col=md-12" id="title-bottom">联系方式（至少填一项）</div>
                <div class="form-group row">
                    <label class="col-md-2 control-label label-list">QQ</label>
                    <div class="col-md-8 col-md-offset-1">
                        <input name="qq" type="number" class="form-control" value="" placeholder="请留下你的企鹅号吧">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2 control-label label-list">手机</label>
                    <div class="col-md-8 col-md-offset-1">
                        <input name="tel" type="number" class="form-control" value="" placeholder="请留下你的手机号吧">
                    </div>
                </div>
                <div class="col-md-offset-3">
                    <label id="checkbox">
                        <input type="checkbox">我已同意柳交所协议
                    </label>
                </div>
                <button type="submit" class="btn btn-fb col-md-offset-4">OK我要发布</button>
            </div>
        </form>
    </div>
</div>